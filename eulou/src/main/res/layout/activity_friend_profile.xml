<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/layoutTopBar"
        layout="@layout/layout_friend_profile_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:layout_alignParentTop="true" />

    <include
        layout="@layout/layout_user_profile_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutTopBar"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/new_message_noti_ly"
        layout="@layout/layout_new_message_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTopBar" />

</RelativeLayout>