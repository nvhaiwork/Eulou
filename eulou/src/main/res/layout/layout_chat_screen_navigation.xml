<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_height"
    android:background="@drawable/top_bar"
    android:paddingLeft="7dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/chat_navigation_call_btn"
        android:layout_toStartOf="@+id/chat_navigation_call_btn"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chat_navigation_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/navigation_bar_title" />

        <TextView
            android:id="@+id/chat_navigation_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <com.ezzet.eulou.views.CustomImageButton
        android:id="@+id/chat_navigation_call_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/chat_navigation_info_btn"
        android:layout_toStartOf="@+id/chat_navigation_info_btn"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_call_white" />

    <com.ezzet.eulou.views.CustomImageButton
        android:id="@+id/chat_navigation_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:src="@drawable/ic_info" />

</RelativeLayout>