<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/tabitem_padding" >

    <com.ezzet.eulou.views.FBProfilePictureView
        android:id="@+id/profilePictureView"
        android:layout_width="@dimen/friendlist_photo_width"
        android:layout_height="@dimen/friendlist_photo_width"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/tabitem_padding"
        android:layout_marginRight="@dimen/tabitem_padding" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profilePictureView"
        android:layout_toRightOf="@+id/profilePictureView"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size1" />

    <ImageView
        android:id="@+id/imageViewCallType"
        android:layout_width="@dimen/callslist_calltype_width"
        android:layout_height="@dimen/callslist_calltype_width"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/profilePictureView"
        android:layout_toRightOf="@+id/profilePictureView"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        android:src="@drawable/icon_called" />

    <TextView
        android:id="@+id/textViewCallType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imageViewCallType"
        android:layout_toRightOf="@+id/imageViewCallType"
        android:text="@string/app_name"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size3" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toLeftOf="@+id/buttonDetail"
        android:layout_toStartOf="@+id/buttonDetail"
        android:text="@string/app_name"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size3" />

    <ImageView
        android:id="@+id/buttonDetail"
        android:layout_width="@dimen/friendlist_button_width"
        android:layout_height="@dimen/friendlist_button_width"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@color/clear_back"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_info_item" />

</RelativeLayout>